{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/syslog",
            "log_group_name": "/northstar-cloud-solutions/npm",
            "log_stream_name": "{instance_id}-syslog",
            "timestamp_format": "%b %d %H:%M:%S",
            "encoding": "utf-8",
            "auto_removal": true
          },
          {
            "file_path": "/var/log/auth.log",
            "log_group_name": "/northstar-cloud-solutions/npm",
            "log_stream_name": "{instance_id}-auth",
            "timestamp_format": "%b %d %H:%M:%S",
            "encoding": "utf-8",
            "auto_removal": true
          },
          {
            "file_path": "/var/lib/docker/containers/*/*-json.log",
            "log_group_name": "/northstar-cloud-solutions/npm",
            "log_stream_name": "{instance_id}-docker",
            "timestamp_format": "%Y-%m-%dT%H:%M:%S",
            "encoding": "utf-8",
            "auto_removal": false
          }
        ]
      }
    }
  },
  "metrics": {
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "InstanceType": "${aws:InstanceType}"
    },
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait"
        ],
        "metrics_collection_interval": 60,
        "totalcpu": true,
        "resources": [
          "*"
        ]
      },
      "disk": {
        "measurement": [
          "used_percent"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "/"
        ]
      },
      "mem": {
        "measurement": [
          "mem_used_percent"
        ],
        "metrics_collection_interval": 60
      },
      "net": {
        "measurement": [
          "bytes_sent",
          "bytes_recv"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "eth0"
        ]
      }
    },
    "namespace": "NorthstarCloudSolutions/System"
  }
}
